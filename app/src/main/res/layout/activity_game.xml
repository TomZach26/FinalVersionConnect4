<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#322B1F"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_Turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF7300"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_Test"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:backgroundTint="#009688"
        android:text="Test" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#2a2a2a"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="Undo" />

        <Button
            android:id="@+id/btn_Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:text="Restart"></Button>
    </LinearLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:rotation="180"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <TextView
        android:id="@+id/GreenTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Green Counter: 0"
        android:textColor="#69FF00"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/RedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Red Counter: 0"
        android:textColor="#FB2222"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TimerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer:"
        android:layout_below="@id/RedTextView"
        android:textColor="#00BCD4"
        android:textSize="30sp"

        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/TimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textStyle="bold"
        android:layout_below="@id/TimerName"
        android:textColor="#00BCD4"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TimerName"
        android:backgroundTint="#009688"
        android:text="Set Reminder" />

</LinearLayout>
